---
import Layout from '../layouts/Layout.astro';
import Habilidades from '../components/habilidades.astro';
import About from '../components/about.astro';
import Projects from '../components/projects.astro';
import SectionContainer from '../components/SectionContainer.astro';
import Intro from '../components/intro.astro';
---

<Layout
	title="José Rodríguez - Desarrollador y programador web"
	description="Contrata a José Rodríguez, frontend developer "
>
	<main>
		<SectionContainer id="top">
			<Intro />
		</SectionContainer>

		<SectionContainer id="habilidades">
			<Habilidades />
		</SectionContainer>

		<SectionContainer id="projects">
			<Projects />
		</SectionContainer>

		<SectionContainer id="about">
			<About />
		</SectionContainer>
	</main>

	<script>
		import Typed from 'typed.js';

		const typed = new Typed('#typed', {
			strings: ['FrontEnd Developer', 'Software Engineer'],
			typeSpeed: 50,
			backSpeed: 30,
			loop: true,
			startDelay: 500,
			showCursor: true,
			cursorChar: '|',
			backDelay: 1500,
		});
	</script>

	<style>
		#typed-container {
			min-height: 1.2em;
			display: inline-block;
			white-space: nowrap;
		}

		@media (max-width: 640px) {
			#typed-container {
				white-space: normal;
				min-height: 1.5em;
				display: block;
				margin-bottom: 0.5rem;
			}

			#typed-container .typed-cursor {
				position: relative;
				top: -2px;
				line-height: 1.4;
			}
		}

		#typed-container .typed-cursor {
			color: #60a5fa;
			font-size: 1em;
			animation: blink 0.75s step-end infinite;
			line-height: 1.3;
		}

		@keyframes blink {
			50% {
				opacity: 0;
			}
		}
	</style>
</Layout>
